extends ../layouts/default

block content
	.container: .jumbotron
		img(src='/images/logo.svg', width='160')
		h1 Welcome
		.heading
			!= homePage.content.welcomeMessage
		hr
		if typeof locals.post != 'undefined'
			h3 Featured Post
			!= post.content.brief
			a(href= '/blog/post/'+post.slug) Read More
		hr

		if typeof locals.gallery != 'undefined'
			h3 Featured Gallery Hero
			img(src=gallery.heroImage.url)
			a(href= '/gallery') Come visit our gallery!
			hr
			
		if user && user.canAccessKeystone
			p
				a(href='/keystone/signin').btn.btn-lg.btn-primary Open the Admin UI
		else
			p We have created a default Admin user for you with the email <strong>jsmilovic@gmail.com</strong> and the password <strong>hardcore</strong>.
			p
				a(href='/keystone/signin', style='margin-right: 10px').btn.btn-lg.btn-primary Sign in
				|  to use the Admin UI.
		hr
		p Remember to <a href='https://github.com/keystonejs/keystone' target='_blank'>Star KeystoneJS on GitHub</a> and
			| <a href='https://twitter.com/keystonejs' target='_blank'>follow @keystonejs</a> on twitter for updates.
